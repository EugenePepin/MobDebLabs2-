<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">>

        <item name="colorPrimary">#FDFDFD</item>
        <item name="colorPrimaryVariant">#00FFFFFF</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.WeatherApp.Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/setting_action_bar_background_color</item>
        <item name="colorPrimaryDark">@color/setting_action_bar_background_color</item>

    </style>
    <style name="Theme.Weather.App.Setting.PopUpMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/settings_menu_style</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">-5dp</item>



    </style>
</resources>